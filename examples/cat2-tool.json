{
    "description": "Print the contents of a file to stdout using 'cat' running in a docker container.",
    "requirements": [
        {
          "@type": "DockerContainer",
          "dockerRepo": "arvados/jobs"
        }
    ],
    "inputs": [
        {
            "@id": "#file1",
            "depth": 0,
            "schema": {
                "type": "File"
            }
        }
    ],
    "baseCmd": "cat",
    "stdin": {
        "@type": "Transform",
        "language": "javascript",
        "value": "$job.inputs.file1.path"
    }
}
