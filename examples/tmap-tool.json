
{
  "@type": "CommandLineTool",
  "@context": "https://raw.githubusercontent.com/common-workflow-language/common-workflow-language/draft2/specification/context.json",
  "inputs": [
    {
      "@id": "#reads",
      "schema": {
        "type": "File"
      }
    },
    {
      "@id": "#stages",
      "schema": {
        "binding": {
          "position": 1
        },
        "type": "array",
        "items": "Stage"
      }
    }
  ],
  "outputs": [
    {
      "@id": "#sam",
      "schema": {
        "binding": {
          "glob": "output.sam"
        },
        "type": "File"
      }
    }
  ],
  "schemaDefs": [
    {
        "type": "record",
        "name": "Stage",
        "fields": [
            {
              "binding": {
                "position": 0,
                "prefix": "stage",
                "separator": ""
              },
              "name": "stageId",
              "type": ["null", "int"]
            },
            {
              "binding": {
                "position": 1,
                "prefix": "-n"
              },
              "name": "stageOption1",
              "type": ["null", "boolean"]
            },
            {
              "binding": {
                "position": 2
              },
              "name": "algos",
              "type": {
                "type": "array",
                "items": [
                    "Map1",
                    "Map2",
                    "Map3",
                    "Map4"
                ]
              }
            }
        ]
    },
    {
      "fields": [
        {
          "binding": {
            "position": 0
          },
          "name": "algo",
          "type": {
            "type": "enum",
            "name": "JustMap1",
            "symbols": ["map1"]
          }
        },
        {
          "name": "maxSeqLen",
          "type": ["null", "int"],
          "binding": {
            "prefix": "--max-seq-length",
            "separator": " ",
            "position": 2
          }
        },
        {
          "name": "minSeqLen",
          "type": ["null", "int"],
          "binding": {
            "prefix": "--min-seq-length",
            "separator": " ",
            "position": 2
          }
        },
        {
          "binding": {
            "position": 2,
            "prefix": "--seed-length"
          },
          "name": "seedLength",
          "type": ["null", "int"]
        }
      ],
      "name": "Map1",
      "type": "record"
    },
    {
      "fields": [
        {
          "binding": {
            "position": 0
          },
          "name": "algo",
          "type": {
            "type": "enum",
            "name": "JustMap2",
            "symbols": ["map2"]
          }
        },
        {
          "name": "maxSeqLen",
          "type": ["null", "int"],
          "binding": {
            "prefix": "--max-seq-length",
            "separator": " ",
            "position": 2
          }
        },
        {
          "name": "minSeqLen",
          "type": ["null", "int"],
          "binding": {
            "prefix": "--min-seq-length",
            "separator": " ",
            "position": 2
          }
        },
        {
          "binding": {
            "position": 2,
            "prefix": "--max-seed-hits"
          },
          "name": "maxSeedHits",
          "type": ["null", "int"]
        }
      ],
      "name": "Map2",
      "type": "record"
    },
    {
      "fields": [
        {
          "binding": {
            "position": 0
          },
          "name": "algo",
          "type": {
            "type": "enum",
            "name": "JustMap3",
            "symbols": ["map3"]
          }
        },
        {
          "name": "maxSeqLen",
          "type": ["null", "int"],
          "binding": {
            "prefix": "--max-seq-length",
            "separator": " ",
            "position": 2
          }
        },
        {
          "name": "minSeqLen",
          "type": ["null", "int"],
          "binding": {
            "prefix": "--min-seq-length",
            "separator": " ",
            "position": 2
          }
        },
        {
          "binding": {
            "position": 2,
            "prefix": "--fwd-search"
          },
          "name": "fwdSearch",
          "type": ["null", "boolean"]
        }
      ],
      "name": "Map3",
      "type": "record"
    },
    {
      "fields": [
        {
          "binding": {
            "position": 0
          },
          "name": "algo",
          "type": {
            "type": "enum",
            "name": "JustMap4",
            "symbols": ["map4"]
          }
        },
        {
          "name": "maxSeqLen",
          "type": ["null", "int"],
          "binding": {
            "prefix": "--max-seq-length",
