{
    "@type": "CommandLineTool",
    "@context": "https://raw.githubusercontent.com/common-workflow-language/common-workflow-language/draft-2-pa/schemas/draft-2/context.json",
    "description": "Print the contents of a file to stdout using 'cat' running in a docker container.",
    "hints": [
        {
          "requirementType": "DockerImage",
          "dockerPull": "debian:wheezy"
        }
    ],
    "inputs": [
        {
            "port": "#file1",
            "type": "File",
            "binding": {"position": 1}
        }
    ],
    "outputs": [
        {
            "port": "#output_file",
            "type": "File",
            "binding": {"glob": "output.txt"}
        }
    ],
    "baseCommand": "cat",
    "stdout": "output.txt"
}
