{
    "description": "Print the contents of a file to stdout using 'cat' running in a docker container.",
    "requirements": [
        {
          "@type": "DockerContainer",
          "dockerRepo": "arvados/jobs"
        }
    ],
    "inputs": [
        {
            "@id": "#file1",
            "depth": 0,
            "schema": {
                "type": "File",
                "adapter": {"position": 1}
            }
        }
    ],
    "outputs": [
        {
            "@id": "#output",
            "depth": 0,
            "schema": {
                "type": "File",
                "adapter": {"glob": "output.txt"}
            }
        }
    ],
    "baseCmd": "cat",
    "stdout": "output.txt"
}
