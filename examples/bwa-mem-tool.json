{
    "@type": "CommandLineTool",
    "@context": "https://raw.githubusercontent.com/common-workflow-language/common-workflow-language/draft2/specification/context.json",
    "requirements": [
        {
          "@type": "DockerContainer",
          "dockerRepo": "images.sbgenomics.com/rabix/bwa",
          "imageId": "9d3b9b0359cf"
        },
        {
          "@type": "MemoryRequirement",
          "value": 5000
        }
    ],
  "inputs": [
    {
      "@id": "#reference",
      "depth": 0,
      "schema": {
        "type": "File",
        "adapter": {
          "position": 2
        }
      }
    },
    {
      "@id": "#reads",
      "depth": 1,
      "schema": {
        "type": "array",
        "items": "File",
        "adapter": {
          "position": 3
        }
      }
    },
    {
      "@id": "#minimum_seed_length",
      "depth": 0,
      "schema": {
        "type": "int",
        "adapter": {
          "position": 1,
          "prefix": "-m"
        }
      }
    },
    {
      "@id": "#min_std_max_min",
      "depth": 1,
      "schema": {
        "items": "int",
        "type": "array",
        "adapter": {
          "itemSeparator": ",",
          "position": 1,
          "prefix": "-I"
        }
      }
    }
  ],
  "outputs": [
    {
      "@id": "#sam",
      "depth": 0,
      "schema": {
        "type": "File",
        "adapter": {
          "glob": "output.sam"
        }
      }
    }
  ],
  "cliAdapter": {
    "argAdapters": [
      {
        "argValue": {
          "@type": "Transform",
          "language": "javascript",
          "value": "$job.allocatedResources.cpu"
        },
        "position": 1,
        "prefix": "-t"
      }
    ],
    "baseCmd": ["bwa", "mem"],
    "stdout": "output.sam"
  }
}
