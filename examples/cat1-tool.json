{
    "description": "Print the contents of a file to stdout using 'cat' running in a docker container.",
    "requirements": [
        {
          "@type": "DockerContainer",
          "dockerRepo": "arvados/jobs"
        }
    ],
    "inputs": [
        {
            "@id": "#file1",
            "depth": 0,
            "schema": {
                "type": "File",
                "adapter": {"order": 1}
            }
        },
        {
            "@id": "#numbering",
            "depth": 0,
            "schema": {
                "type": "boolean",
                "adapter": {"order": 0, "prefix": "-n"}
            }
        }
    ],
    "baseCmd": "cat"
}
